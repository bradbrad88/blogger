<div
  class="group border-[1px] shadow-lg shadow-zinc-400 rounded-lg overflow-hidden hover:scale-[1.01] transition-all"
>
  <div
    class="flex justify-between bg-cyan-700 group-hover:bg-cyan-600 text-white text-xl p-2 transition-all"
  >
    <h2 class="text-xl">{{title}}</h2>
    <p class="text-base">
      Posted by
      {{author.username}}
      on
      <time datetime="{{displayTime createdAt}}">
        {{displayTime createdAt}}
      </time>
    </p>

  </div>
  <div class="p-2 text-xl mb-2">

    {{text}}
  </div>
</div>