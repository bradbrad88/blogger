<div
  class="{{#unless disable_hover}}group hover:scale-[1.01]{{/unless}} border-[1px] shadow-lg shadow-zinc-400 rounded-lg overflow-hidden  transition-all"
>
  <div
    class="flex justify-between bg-cyan-700 group-hover:bg-cyan-600 text-white text-xl p-2 transition-all"
  >
    <h2 class="text-xl">{{title}}</h2>
    <p class="text-base">
      {{#if user}}
        Posted by
        {{user.username}}
        on
      {{/if}}
      <time datetime="{{displayTime createdAt}}">
        {{displayTime createdAt}}
      </time>
    </p>

  </div>
  <div class="p-2">
    <p class="text-xl mb-2 whitespace-pre-wrap">{{text}}</p>
  </div>
</div>