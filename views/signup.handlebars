<div class="flex flex-col sm:flex-row w-full max-w-[800px] mx-auto gap-5 mt-3">
  <form
    id="login"
    class="flex flex-col sm:border-[1px] border-zinc-300 w-full p-3 gap-5 rounded-md sm:shadow-md"
  >
    <h2 class="font-bold text-lg">Login</h2>
    <div class="flex flex-col">
      <label for="login-username">Username:</label>
      <input
        id="login-username"
        name="username"
        type="text"
        class="border-b-2 p-2"
        placeholder="username..."
      />
    </div>
    <div class="flex flex-col">
      <label for="login-password">Password:</label>
      <input
        id="login-password"
        name="password"
        type="password"
        class="border-b-2 p-2"
        placeholder="password..."
      />
    </div>
    <button
      type="submit"
      class="text-white bg-blue-700 hover:bg-blue-600 rounded-md p-2 mt-auto transition-all"
    >Login</button>
  </form>
  <form
    id="signup"
    class="flex flex-col sm:border-[1px] border-zinc-300 w-full p-3 gap-5 rounded-md sm:shadow-md"
  >
    <h2 class="font-bold text-lg">Sign Up</h2>
    <div class="flex flex-col">
      <label for="signup-username">Username:</label>
      <input
        required
        id="signup-username"
        name="username"
        type="text"
        class="border-b-2 p-2"
        placeholder="create a username..."
      />
    </div>
    <div class="flex flex-col">
      <label for="signup-password">Password:</label>
      <input
        required
        id="signup-password"
        name="password"
        type="text"
        class="border-b-2 p-2"
        placeholder="create a password..."
      />
    </div>
    <button
      type="submit"
      class="text-white bg-green-700 hover:bg-green-600 rounded-md p-2 transition-all"
    >Signup</button>
  </form>

</div>

<script src="/js/signup.js"></script>