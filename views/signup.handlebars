<div class="flex w-full max-w-[800px] mx-auto gap-5">
  <form id="login" class="flex flex-col border-[1px] border-zinc-300 w-full p-3 gap-5">
    <h2 class="font-bold text-lg">Login</h2>
    <div class="flex flex-col">
      <label for="login-username">Username:</label>
      <input
        id="login-username"
        name="username"
        type="text"
        class="border-b-2 p-2"
        placeholder="username..."
      />
    </div>
    <div class="flex flex-col">
      <label for="login-password">Password:</label>
      <input
        id="login-password"
        name="password"
        type="password"
        class="border-b-2 p-2"
        placeholder="password..."
      />
    </div>
    <button type="submit" class="border-2 border-green-700 rounded-md p-2">Login</button>
  </form>
  <form id="signup" class="flex flex-col border-[1px] border-zinc-300 w-full p-3 gap-5">
    <h2 class="font-bold text-lg">Sign Up</h2>
    <div class="flex flex-col">
      <label for="first-name">Given Name:</label>
      <input
        id="first-name"
        name="first_name"
        type="text"
        class="border-b-2"
        placeholder="John"
      />
    </div>
    <div class="flex flex-col">
      <label for="last-name">Family Name:</label>
      <input
        id="last-name"
        name="last_name"
        type="text"
        class="border-b-2"
        placeholder="Wick"
      />
    </div>
    <div class="flex flex-col">
      <label for="signup-username">Username:</label>
      <input
        required
        id="signup-username"
        name="username"
        type="text"
        class="border-b-2"
        placeholder="itsprobablyalreadytaken"
      />
    </div>
    <div class="flex flex-col">
      <label for="signup-password">Password:</label>
      <input
        required
        id="signup-password"
        name="password"
        type="text"
        class="border-b-2"
        placeholder="keep it secret... keep it safe"
      />
    </div>
    <button type="submit" class="border-2 border-blue-700 rounded-md p-2">Signup</button>
  </form>

</div>

<script src="/js/signup.js"></script>